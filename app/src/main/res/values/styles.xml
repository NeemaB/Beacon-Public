<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listViewStyle">@style/PreferencesListViewStyle</item>
        <!--
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar2</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar2</item>
        -->

    </style>

    <style name="LauncherTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher</item>
    </style>

    <style name="CreateEventTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar2</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar2</item>
    </style>

    <style name="AppTheme.ActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="height">@dimen/action_bar_height</item>
    </style>

    <style name="AppTheme.ActionBar2" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:height">@dimen/small_action_bar_height</item>
        <item name="height">@dimen/small_action_bar_height</item>
    </style>
    
    <style name="myPreferenceStyle">
        <item name="android:background">@color/custom_white</item>
        <!--
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="textColor">@color/custom_white</item>
        <item name="textSize">@dimens/preferences_text_size</item>
        -->

    </style>

    <style name="PreferencesListViewStyle" parent="@android:style/Widget.Holo.ListView">
        <item name="android:background">@color/custom_white</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Checkbox Theme -->
    <style name="MyCheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
