<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listViewStyle">@style/PreferencesListViewStyle</item>
        <!--
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar2</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar2</item>
        -->

    </style>

    <style name="DialogTheme" parent="android:Theme.Holo.Light">

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/custom_white</item>
    </style>

    <!-- Theme for TimePicker and DatePicker dialogs -->
    <style name="PickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="LauncherTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher</item>
    </style>

    <!-- Theme for TextInput in create event activity -->
    <style name="TextLabelTheme" parent="TextAppearance.AppCompat">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/dark_gray</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CreateEventTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar2</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar2</item>
    </style>

    <style name="AppTheme.ActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="height">@dimen/action_bar_height</item>
    </style>

    <style name="AppTheme.ActionBar2" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:height">@dimen/small_action_bar_height</item>
        <item name="height">@dimen/small_action_bar_height</item>
    </style>

    <style name="myPreferenceStyle">
        <item name="android:background">@color/custom_white</item>

    </style>

    <style name="customToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/dark_gray</item>

    </style>


    <!-- list view style for the preferences page -->
    <style name="PreferencesListViewStyle" parent="@android:style/Widget.Holo.ListView">
        <item name="android:background">@color/custom_white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:dividerHeight">1dp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Checkbox Theme -->
    <style name="MyCheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
