<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <TextView android:id = "@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20pt"
        android:text=""
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/world"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="{fa-map}"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="{fa-list-ul}"
            android:textColor="@color/dark_gray"
            android:textSize="30sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/favourites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="{fa-user}"
            android:textColor="@color/dark_gray"
            android:textSize="30sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="{fa-gear}"
            android:textColor="@color/dark_gray"
            android:textSize="30sp" />

    </LinearLayout>

    <android.support.v7.widget.SearchView
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="35dp"
        android:queryHint="@string/query_string"
        android:layout_below="@+id/tabs"
        android:background="@color/black"
        android:visibility="gone"
        android:backgroundTint="@color/very_light_gray">

    </android.support.v7.widget.SearchView>

    <FrameLayout
        android:id="@+id/events_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchBar">

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/action_bar_height"
        android:layout_marginRight="16dp"
        app:srcCompat="@android:drawable/ic_menu_search"
        app:elevation="6dp"
        android:layout_weight="1"
        android:contextClickable="false"
        app:backgroundTint="@color/very_light_gray"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:tint="@color/colorPrimary" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_event_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@color/colorPrimary"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/very_light_gray" />



</RelativeLayout>

